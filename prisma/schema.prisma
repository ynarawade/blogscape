generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id         String   @id @default(cuid())
  title      String
  content    String
  imageUrl   String
  authorId   String
  authorName String
  authorImg  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
